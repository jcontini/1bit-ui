  "keywords": [
    "svelte",
    "ui",
    "components",
    "retro",
    "1-bit",
    "pda",
    "palm-pilot",
    "pixel-art",
    "dither"
  ],
  "author": "Joe Contini",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jcontini/1bit-ui"
  },
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
